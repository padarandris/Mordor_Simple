@model IEnumerable<Mordor_Simple.Models.Weapon>

@{
    ViewBag.Title = "Weapons";
}

<h2>Weapon list</h2>

<p>
    @Html.ActionLink("Forge new weapon", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.WeaponId }) |
            @Html.ActionLink("Details", "Details", new { id=item.WeaponId }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.WeaponId })
        </td>
    </tr>
}

</table>
